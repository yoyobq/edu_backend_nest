{
  "preset": "ts-jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "globalSetup": "<rootDir>/global-setup-e2e.ts",
  "globalTeardown": "<rootDir>/global-teardown-e2e.ts",

  "testEnvironment": "node",
  "testMatch": ["**/?(*.)e2e-spec.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "\\.skip\\.ts$", "/__.*\\.skip__/", "/.*\\.skip/"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true
}
