# 这是一个配置模板，请复制为 .env.development 或 .env.production 后填入实际值
NODE_ENV=
APP_NAME=
APP_PORT=
APP_HOST=
DEBUG=

# CORS 配置（用于 src/core/config/server.config.ts）
# 是否启用 CORS（开发默认启用）
APP_CORS_ENABLED=true
# 允许的来源（逗号分隔）；开发留空表示允许任意来源
APP_CORS_ORIGINS=
# 是否允许携带凭据（Cookie / Authorization）
APP_CORS_CREDENTIALS=true

# 数据库基本连接配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=
DB_PASS=
DB_NAME=
DB_TIMEZONE=+08:00
DB_POOL_SIZE=10

# TypeORM 配置
DB_SYNCHRONIZE=false
DB_LOGGING=false

# 字段加密配置（用于 src/core/config/field-encryption.config.ts）
# 生产必须设置为安全值；开发可留空走默认值
FIELD_ENCRYPTION_KEY=
FIELD_ENCRYPTION_IV=

# JWT 配置
JWT_SECRET=
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ENABLE_REFRESH=true
JWT_ISSUER=ssts-local
JWT_AUDIENCE=DESKTOP,SSTSTEST,SSTSWEB,SSTSWEAPP,SJWEB,SJWEAPP

# 微信小程序
WECHAT_APP_ID=
WECHAT_APP_SECRET=
